@{
    ViewData["Title"] = "AlterPassword";
}
@model OnlineDatingSite.Models.SInformationModel;

<!DOCTYPE html>
<html>
<br>
<br>
<br>
<head>
    <h1 style="text-align: center;font-size:60px;">更改密碼</h1>
    <br>
    <style>

        table {
            border-spacing: 20px;
            border: 1px solid black;
        }

            table.center {
                margin-left: auto;
                margin-right: auto;
            }

        tr, td {
            border: 1px solid black;
        }
    </style>
</head>


<body>
    <form action="\Website\AlterPassword" style="text-align: center;"method="post">
        <label style="color:Red;">@ViewData["erroruser"]@ViewData["errorpassword"]@ViewData["errornewpassword"]@ViewData["errornewpassword2"]</label>
        <table class="center">
            <tr>
                <td><label for="password"> 原密碼</label></td>
                <td><input type="text" id="password" name="password" /></td>
                
            </tr>
            <tr>
                <td><label for="newpassword">新密碼</label></td>
                <td><input type="text" id="newpassword" name="newpassword" /></td>
                
            </tr>
            <tr>
                <td><label for="newpassword2">確認新密碼</label></td>
                <td><input type="text" id="newpassword2" name="newpassword2" /></td>
                
            </tr>
        </table><br><br>

        <input type="submit" value="確認更改">


    </form>
    </body>
</html>
